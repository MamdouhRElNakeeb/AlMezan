<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.nakeeb.almezan">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".helper.Main"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.Register"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.Landing"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PrayerAdd"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PrayersStats"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.HandoutAdd"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.ZekrList"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ZekrDetails"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ZekrStats"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MonthlyStats"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.Reset"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.Settings"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.About"
            android:screenOrientation="portrait"/>
    </application>

</manifest>