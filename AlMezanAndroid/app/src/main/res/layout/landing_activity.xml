<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gradient"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pattern"
        android:layout_alignParentBottom="true"/>


    <ImageView
        android:id="@+id/almezan_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/almezan_logo"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/almezan_logo"
        android:layout_centerInParent="true">


        <Button
            android:id="@+id/prayerAddBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="تسجيل الصلاة"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"/>

        <Button
            android:id="@+id/handoutAddBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="عداد الصدقة"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/zekrAddBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="عداد الذِكر"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/monthlyStatsBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="مقارنة الشهور"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/statsBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="نسب و إحصائيات"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/zekrStatsBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="إحصائيات الذِكر"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="تصفير العداد"
            android:textSize="25sp"
            android:background="@drawable/btn_bg"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/5224354917">
    </com.google.android.gms.ads.AdView>


    <!--ADmob ID-->
    <!--ca-app-pub-6430998960222915/9397645006-->

</RelativeLayout>