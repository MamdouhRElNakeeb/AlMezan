<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_gradient"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pattern"
        android:scaleY="-1"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pattern"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/regLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="0dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:background="@drawable/edttxt_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:inputType="textPersonName"
            android:textSize="@dimen/et_font"
            android:gravity="center"
            android:hint="@string/name"/>

        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/edttxt_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/et_font"
            android:gravity="center"
            android:hint="@string/email"/>

        <EditText
            android:id="@+id/passET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/edttxt_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:gravity="center"
            android:textSize="@dimen/et_font"
            android:hint="@string/password"/>

        <TextView
            android:id="@+id/ageET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/et_font"
            android:text="@string/dob"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/daySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:background="@drawable/spinner_bg">


                </android.support.v7.widget.AppCompatSpinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/spinner_arrow"/>

            </RelativeLayout>

            <!--<android.support.v7.widget.AppCompatSpinner-->
                <!--android:id="@+id/daySpinner"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingLeft="@dimen/margin10"-->
                <!--android:background="@drawable/spinner_bg">-->

            <!--</android.support.v7.widget.AppCompatSpinner>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/monthSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:background="@drawable/spinner_bg">


                </android.support.v7.widget.AppCompatSpinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/spinner_arrow"/>

            </RelativeLayout>

            <!--<android.support.v7.widget.AppCompatSpinner-->
                <!--android:id="@+id/monthSpinner"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:gravity="center"-->
                <!--android:background="@drawable/spinner_bg">-->

            <!--</android.support.v7.widget.AppCompatSpinner>-->

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/yearSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10"
                    android:background="@drawable/spinner_bg">


                </android.support.v7.widget.AppCompatSpinner>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/spinner_arrow"/>

            </RelativeLayout>

            <!--<android.support.v7.widget.AppCompatSpinner-->
                <!--android:id="@+id/yearSpinner"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingLeft="@dimen/margin10"-->
                <!--android:background="@drawable/spinner_bg">-->

            <!--</android.support.v7.widget.AppCompatSpinner>-->

        </LinearLayout>


        <EditText
            android:id="@+id/imgET"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edttxt_bg"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:hint="اختر صورة"/>

        <Button
            android:id="@+id/regBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textSize="@dimen/btn_font"
            android:textStyle="bold"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/regToLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/current_user_login_here"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@android:color/transparent"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/almezan_logo"
        android:layout_above="@id/regLL"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:src="@drawable/almezan_logo"
        android:layout_alignParentTop="true"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5330928698678581/8587799632">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>