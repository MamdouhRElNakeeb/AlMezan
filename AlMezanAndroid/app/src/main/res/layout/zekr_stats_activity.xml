                        android:textSize="@dimen/stats_tv_size"
                        android:gravity="center"/>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


    <include
        layout="@layout/side_menu"/>

</android.support.v4.widget.DrawerLayout>