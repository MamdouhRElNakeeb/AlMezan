            android:id="@+id/monthsRVRL"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layoutDirection="rtl"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_below="@id/statsTitleTV">

